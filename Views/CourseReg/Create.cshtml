@using EfCoreApp.Data
@model CourseRegister

<h2>Öğrenci Kurs Kayıt Formu</h2>
<hr />
<form asp-controller="CourseReg" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Öğrenci Bilgileri</label>
        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control">
            <option value="">Öğrenci Seçiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Kurs Adı</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">
            <option value="">Kurs Seçiniz</option>
        </select>
    </div>
   
    <button type="submit" class="btn btn-success">Kaydet</button>

</form>
